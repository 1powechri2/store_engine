<% unless @user.default_billing_address %>
  <h2>Please Add a default billing address</h2>
  <%= form_for Address.new, :url => user_addresses_path(:user_id => current_user.id, :type => "billing") do |f| %>
    <%= f.label :street %>
    <%= f.text_field :street %>
    <%= f.label :street_two %>
    <%= f.text_field :street_two %>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <%= f.label :state %>
    <%= f.text_field :state %>
    <%= f.label :country %>
    <%= f.text_field :country %>
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %><br>
    <%= f.submit %>
  <% end %>
<% end %>
<%= link_to "cancel", nil, :id => "cancel_default_billing", :remote => true %>