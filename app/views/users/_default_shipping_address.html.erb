<% unless @user.default_shipping_address %>
  <h2>Please add a default shipping address</h2>
  <%= form_for Address.new, :url => user_addresses_path(:user_id => current_user.id, :type => "shipping") do |f| %>
    <%= f.label :street %>
    <%= f.text_field :street %>
    <%= f.label :street_two %>
    <%= f.text_field :street_two %>
    <%= f.label :city %>
    <%= f.text_field :city %>
    <%= f.label :state %>
    <%= f.text_field :state %>
    <%= f.label :country %>
    <%= f.text_field :country %>
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %><br>
    <%= f.submit %>&nbsp;&nbsp;<%= link_to "cancel", nil, :id => "cancel_default_shipping", :remote => true %>
  <% end %>
<% end %>