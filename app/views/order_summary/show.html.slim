  div class="span2"
    button class="btn btn-large" 
      = link_to "Place Order", orders_path, :method => :post

br
br
br
h3 Items
div class="row-fluid"
  div class="span7"
    table class="table table-striped well"    
      - cart.cart_items.each do |cart_item|
        tr
          - if cart_item.product.photo
            td class="span1" = image_tag(cart_item.product.photo, :size => "50x50")
          - else
            td
          td class="span1" = link_to cart_item.product.title, product_path(cart_item.product)
          td class="span1" 
            | $
            = cart_item.price
          td class="span1" Quantity: #{cart_item.quantity}

br
br
br
h3 Order Total
="$#{cart.total}"
        