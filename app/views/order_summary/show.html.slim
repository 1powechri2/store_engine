  div class="span3"
    h3 Billing Address

    address
      #{@billing_address.first_name} #{@billing_address.last_name}
      #{@billing_address.company}
      #{@billing_address.line_1}
      #{@billing_address.line_2}
      #{@billing_address.city}, #{@billing_address.state} #{@billing_address.zipcode}
