<%= form_for @trip, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :children, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :children, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :adults, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :adults, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city_of_origin, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city_of_origin, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pace, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :pace, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :month_of_departure, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :month_of_departure, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                trips_path, :class => 'btn' %>
  </div>
<% end %>
