<%= form_tag sessions_path, :class => "form-inline pull-right" do %>
  <%= text_field_tag :email, params[:email], :placeholder => "Email", :class => "input-small" %>
  <%= password_field_tag :password, nil, :placeholder => "Password", :class => "input-small" %>
  <%#= check_box_tag :remember_me, 1, params[:remember_me] %>
  <%#= label_tag :remember_me, nil, :id => "remember_me" %>
  <%= submit_tag "Log in", :class => "btn btn-small btn" %>
<% end %>