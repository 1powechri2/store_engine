<!DOCTYPE html>
<html>
<head>
  <title>StoreEngine</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <link href='http://fonts.googleapis.com/css?family=Great+Vibes' rel='stylesheet' type='text/css'>
</head>
<body>
  <div id="wrapper" class="clearfix">
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">
            Store Engine
          </a>
          <div class="nav-collapse">
            <ul class="nav">
              <li <% if current_page?("/") -%> class="active" <% end -%> >
                <a href="/">Home</a>
              </li>
              <li <% if current_page?(products_path) -%> class="active" <% end -%> >
                <a href="/products">Products</a>
              </li>
              <% if current_user -%>
              <li <% if current_page?(orders_path) -%> class="active" <% end -%> >
                <a href="/orders">Orders</a>
              </li>
              <% end -%>
            </ul>
            <% if current_user %>
              <ul class="nav pull-right">
                <li><a href="#"><%= current_user.screen_name %></a></li>
                <li class="divider-vertical"></li>
                <li><a href="/logout">logout</a></li>
              </ul>
            <% else %>
              <ul class="nav pull-right">
                <li><a href="/login">login</a></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div id="sidebar">
      <div id="scroller-anchor"></div>
      <div id="scroller" style="margin-top:10px; width:270px">
        <%= render partial: "/carts/mini_cart" %>
      </div>
    </div>

    <%= render_flashes %>

    <div id="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
