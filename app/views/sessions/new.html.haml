= form_for @user, :url => { :action => 'create' } do |f|
  -if @user.errors.any?
    #error_explanation
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email

  .field
    = f.label :password
    = f.text_field :password

  .actions
    = f.submit 'Sign In'
