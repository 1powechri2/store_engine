<% "Search" %>

<%= form_tag products_path, method: :get %>
  <p>
    <%= label_tag :search_title %><br />
    <%= text_field_tag :search_title %>
  </p>
  OR
  <p>
    <%= label_tag :search_category %><br />
    <%= text_field_tag :search_category %>
  </p>
  <p><%= submit_tag "Search!" %></p>


<p><%= link_to "All Products", products_path %></p>
<% Category.all.each do |c| %>
  <%= link_to c.title, category_path(c) %>
  <% end %>


<ul class="thumbnails">
  <%= render :partial => "product", :collection => @products %>
</ul>


