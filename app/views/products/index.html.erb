<% if logged_in? && current_user.is_admin? %>
<div id="admin_bar">
<h4>To view an admin-only version of this products index, <%= link_to "click here", admin_products_path %></h4>
</div>
<% end %>
<div id="products_intro">
<h2>Our Products</h2>
</div>
<div id="products">
  <% if @products.any? %>
    <%= render :partial => "products_row" %>
  <% else %>
    <p>Worace is busy making products!</p>
  <% end %>
</div>