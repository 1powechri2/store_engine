<% if logged_in? && current_user.is_admin? %>
<div id="admin_bar">
<h4>To view an admin-only version of this products index, <%= link_to "click here", admin_products_path %></h4>
</div>
<% end %>
<div id="intro">
  <h2>Browse:</h2>
  <%= link_to "All Products", products_path, :class => "add_link" %>
  <% @categories.each do |category| %>
    <%= link_to "#{category.name.titleize}", category_path(category), :class => "add_link" %>
  <% end %>
</div>
<div id="products">
  <% if @products.any? %>
    <%= render :partial => "products_row" %>
  <% else %>
    <p>Worace is busy making products!</p>
  <% end %>
</div>