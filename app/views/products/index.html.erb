<%- model_class = Product -%>

<h2>Admin Dashboard</h2>


<div class="row">
  <div class="span3">
    <div class="main_col">
      <h3>Things</h3>
      <ul class="nav nav-tabs nav-stacked">
        <li><a href="#">Derp</a></li>
        <li><a href="#">de</a></li>
        <li><a href="#">burp</a></li>
        <li><a href="#">di</a></li>
        <li><a href="#">Flerp</a></li>
      </ul>
    </div>
  </div>

  <div class="span9">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:description) %></th>
          <th><%= model_class.human_attribute_name(:price) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.id, product_path(product) %></td>
            <td><%= link_to product.name, product_path(product), 
              :id => "product_link" %></td>
            <td><%= product.description %></td>
            <td><%= product.price %></td>
            <td><%=l product.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_product_path(product), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          product_path(product),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' %>
              <%= link_to "Retire", retire_product_path(product.id), 
                :class => 'btn btn-mini', method: :put %>
              
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
              new_product_path,
              :class => 'btn btn-primary' %>

  </div>
</div>

