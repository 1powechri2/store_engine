<h1>Products</h1>

<div>
  <table id="products" class="table table-striped table-bordered">
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Categories</th>
      <th>&nbsp;</th>
    </tr>
    <%= will_paginate %>
    <% @products.each do |product| %>
      <% if product.active? %>
        <%= render product %>
      <% end %>
    <% end %>
  </table>
  <%= will_paginate %>
</div>