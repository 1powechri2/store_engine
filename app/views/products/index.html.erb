<h1>Products</h1>

<div>
  <table id="products" class="table table-striped table-bordered">
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Categories</th>
      <th>&nbsp;</th>
    </tr>
    <% @products.each do |product| %>
      <% if product.active? %>
        <tr id="product_<%= product.id %>">
          <td id="product_<%=product.id%>_add"><%= link_to product.title, product_path(product) %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td id="product_<%=product.id%>_categories"><% product.categories.each do |c| %>
                          <%= c.name %>
                        <% end %></td>
          <td><%= link_to "Add to Cart", cart_items_path(:product_id => product), :method => :post, :class => 'btn btn-success' %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
  <%= link_to "Add a product", new_product_path, :id => "add_product", :class => 'btn btn-primary' %>
</div>

<div style="margin-top:20px;">
  <h2>Products <small>Retired</small></h2>

  <table id="retired_products" class="table table-striped table-bordered">
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Categories</th>
      <th>&nbsp;</th>
    </tr>
    <% @products.each do |product| %>
      <% if product.active? == false %>
        <tr id="product_<%= product.id %>">
          <td id="product_<%=product.id%>_add"><%= link_to product.title, product_path(product) %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td id="product_<%=product.id%>_categories"><% product.categories.each do |c| %>
                          <%= c.name %>
                        <% end %></td>
          <td><%= link_to "Add to Cart", cart_items_path(:product_id => product), :method => :post, :class => 'btn btn-success' %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>