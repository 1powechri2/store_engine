<li class="span3" id="<%= p.id %>" class="small_product">
  <div class="thumbnail adtl_col" id="<%= p.id %>" class="small_product">
    <img src="#" alt="" id="<%= p.id %>" class="small_product">
    <h3 id="<%= p.id %>" class="small_product"><%= p.name %></h3>
    <%= button_to 'Add to Cart', line_items_path(:product_id => p) %>
    <p id="<%= p.id %>" class="small_product"><i>$<%= p.price %>.00</i></p>
    <p id="<%= p.id %>" class="small_product"><%= p.description %></p>
  </div>
</li>
