<%= form_for @product do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />

  <%= f.label :description %><br />
  <%= f.text_area :description %><br />

  <%= f.label :price %><br />
  <%= f.text_field :price %><br />

  <%= f.label :photo %><br />
  <%= f.text_field :photo %><br />

  <%= f.label :retired %><br />
  <%= f.check_box :retired %><br />

  <%= select_tag :categories %>

  <%= f.submit %>
  
<% end %>