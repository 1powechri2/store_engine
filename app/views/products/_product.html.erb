 <div class="thumbnail" id="<%= product.id %>">
  <%= link_to product.title, product_path(product) %>
    | <%= product.description %> <%= image_tag(product.image_link, 
                                      :width => '100') %>
    | <%= number_to_currency(product.price) %>


    <% product.categories.each do |c| %> | 
      <%= link_to c.title, category_path(c) %>
      <% end %>
     <% if admin? %>
    |	<%= link_to 'Destroy', product, 
          confirm: 'Are you sure?', method: :delete %>
    | <%= link_to 'Edit', edit_product_path(product) %>
    |	<%= if product.activity then "Active" else "Retired" end %>
    	<% end %>
    | <%= link_to "Add to Cart", cart_items_path(:product_id => product), 
          :method => :post, :remote => true, :id => "product_#{product.id}" %>
    |
</div>

