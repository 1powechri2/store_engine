<h1>Product</h1>

<p>
  <b>Title</b><br>
  <%= @product.title %>
</p>

<p>
  <b>Description</b><br>
  <%= @product.description %>
</p>

<p>
  <b>Price</b><br>
  <%= @product.price %>
</p>

<p>
  <b>Photo url</b><br>
  <%= @product.photo_url %>
</p>

<p>
  <b>Is Found in the Following Categories</b><br>
  <ul>
    <%  @product.categories.each do |cat| %>
      <li><%= cat.name %></li>
    <% end %>
</p>


<div class="form-actions">
  <%= link_to 'Back', products_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_product_path(@product), :class => 'btn' %>
  <%= link_to 'Delete', product_path(@product), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
