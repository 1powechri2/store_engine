<h1><%= @product.title %></h1>

<p>
  <b>Category</b><br>
  <%= @product.category.name %>
</p>

<p>
  <b>Description</b><br>
  <%= @product.description %>
</p>

<p>
  <b>Price</b><br>
  <%= sprintf("$%0.02f", @product.price) %>
</p>

<p>
  <b>Photo</b><br>
  <%= image_tag(@product.photo) %>
</p>

<p>
  <b>Retired</b><br>
  <%= @product.retired %>
</p>

<div class="form-actions">
  <%= link_to 'Add to Cart', line_items_path(product_id: @product), :method => :post, :class => 'btn'%>
  <%= link_to 'Edit', edit_product_path(@product), :class => 'btn' %>
  <%= link_to 'Delete', product_path(@product), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
  <%= link_to 'View all Products', products_path, :class => 'btn'  %>
</div>
