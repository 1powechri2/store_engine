<%- model_class = Order -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Stuff</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order.id) %></td>
        <td><%= link_to order.user.email, order_path(order.id) %></td>
        <td><%= order.inspect %></td>
      </tr>
    <% end %>
  </tbody>
</table>
