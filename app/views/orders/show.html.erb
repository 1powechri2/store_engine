<h1>This is an order!</h1>

<ul>
  <li>Order number: <%= @order.id %></li>
  <li>Date: <%= @order.created_at %></li>
  <li>Status: <%= @order.status %></li>
</ul>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    
    <%= render :partial => "shared/order_products", :collection => @order.order_products, as: :order_products %>

    <tr id="total-row">
      <td colspan="2"></td>
      <td style="border-left: 0px; border-right: 0px;">Total</td>
      <td><%= @order.order_total %></td>
    </tr>
  </tbody>
</table>