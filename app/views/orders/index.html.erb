<h1>Dashboard</h1>

<ul id="orders">
 <% @orders.each do |order| %>
   <li>
    <%= order.status %>
    <%=link_to order.id, order_path(order) %>
    <%= order.user_id %>
    <%= order.created_at %>
    <%= order.updated_at %>
    <% if order.next_status %>
      <%= form_for order do |f| %>
        <%= f.hidden_field :status, :value => order.next_status %>
        <%= f.submit "mark as #{order.next_status}" %>
      <% end %>
    <% end %>  
   </li>

 <% end %>
</ul>