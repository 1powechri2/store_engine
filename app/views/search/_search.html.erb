<span class="search">
  <%= form_tag search_path, :class => "top_search navbar-search", :method => 'get' do %>
    <%= text_field_tag :search, params[:search], :class => "search_text" %>
    <%= submit_tag "Search", :id => "click_search", :name => "search_button", :class => "search_button search-query btn btn-small btn-success" %>
  <% end %>
</span>
