<h2>Products</h2>
<% @products.each do |product| %>
  <%= link_to product.name, admin_product_path(product) %>
  <%= link_to "Remove", admin_product_path(product),
    :method => :delete,
    :confirm => "Delete \"#{product.name}\"?"%>
  <br />
<% end %>

<%= link_to "New Product", new_admin_product_path %>
