<h1>Products</h1>

<div>
  <table id="products" class="table table-striped table-bordered">
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Categories</th>
      <th>&nbsp;</th>
    </tr>
    <%= will_paginate %>
    <% @products.each do |product| %>
      <% if product.active? %>
        <%= render product %>
      <% end %>
    <% end %>
  </table>
  <%= will_paginate %>
  <%= link_to "Add a product", new_admin_product_path, :id => "add_product", :class => 'btn btn-primary' %>
</div>

<div style="margin-top:20px;">
  <h2>Products <small>Retired</small></h2>

  <table id="retired_products" class="table table-striped table-bordered">
    <tr>
      <th>Product</th>
      <th>Description</th>
      <th>Price</th>
      <th>Categories</th>
      <th>&nbsp;</th>
    </tr>
    <%= will_paginate %>
    <% @products.each do |product| %>
      <% if product.active? == false %>
        <%= render product %>
      <% end %>
    <% end %>
  </table>
  <%= will_paginate %>
</div>