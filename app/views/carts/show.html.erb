<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h2>Your Motha Fucking Exotic Fruit Cart</h2>
<h3>Cart Total: <%= sprintf("$%0.02f", @cart.total_price) %></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% if @cart.line_items.empty? %>
      <h1>Theres nothing in the cart</h1>
    <% end %>
    <% @cart.line_items.each do |item| %>
      <tr>
        <td><%= image_tag(item.product.photo) %></td>
        <td><%= link_to item.product.title, product_path(item.product) %></td>
        <td><%= item.product.description %></td>
        <td><%= sprintf("$%0.02f", item.product.price) %></td>
        <td><%= item.quantity %> 
        <td><%= sprintf("$%0.02f", item.total_price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Empty Cart', @cart, method: :delete, confirm: "Are you sure?", :class => 'btn' %>
