<h2>Your Cart</h2>
<table class="table">
  <tr>
    <th>Product Name</th>
    <th>Quantity</th>
    <th>Price</th>
    <th></th>
  </tr>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.product.name %></td>
      <td>
        <%= link_to "", decrease_line_item_path(item), :method => :put, :class => 'icon-minus-sign icon-large' %>
        <span class="quantity"><%= item.quantity %></span>
        <%= link_to "", increase_line_item_path(item), :method => :put, :class => 'icon-plus-sign icon-large' %>
      </td>
      <td><%= item.product.price%></td>
      <td>
        <%= link_to (''),
                    line_item_path(item),
                    :method => :delete,
                    :class => 'icon-trash btn btn-medium btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>


<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
